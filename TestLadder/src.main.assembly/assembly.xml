	<formats>
		<format>jar</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/site/apidocs</directory>
			<outputDirectory>doc/javadoc</outputDirectory>
			<!--
				directory>src</directory> <outputDirectory>src</outputDirectory>
				<includes> <include>**/*.*</include> </includes
			-->
